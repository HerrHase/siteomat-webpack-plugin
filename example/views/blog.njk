{% extends('layout.njk') %}

{% block main %}

{% set posts = pageQuery.find({ orderBy: [ '-date_published' ], limit: 2, filter: { tags: { _in: [ 'tok', 'xxx' ] } } }) %}

{% for post in posts %}
    <a class="post" href="{{ post.path }}">
        <h2 class="post__title">
            {{ post.title }}
        </h2>
    </a>
{% endfor %}

{% endblock %}
